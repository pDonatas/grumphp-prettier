{
    "name": "pdonatas/grumphp-prettier",
    "description": "A Prettier task for GrumPHP.",
    "type": "plugin",
    "keywords": [
        "indykoning",
        "grumphp",
        "quality",
        "prettier",
        "linter"
    ],
    "homepage": "https://github.com/indykoning/grumphp-prettier",
    "license": "MIT",
    "require": {
        "phpro/grumphp": "*"
    },
    "autoload": {
        "psr-4": {
            "Indykoning\\GrumPHPPrettier\\": "src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.41",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.17",
        "phpstan/phpstan": "^1.10"
    }
}
